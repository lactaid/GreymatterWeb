<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Production Chart</title>
    <script src="/chart.js"></script>
</head>
<body>
    <canvas id="myChart" width="400" height="400"></canvas>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        let chartConfig = <%- JSON.stringify(chartConfig) %>;
        var myChart = new Chart(ctx, chartConfig );

        function updateChart() {
            fetch('/production/data')
            .then(response => response.json())
            .then(data => {
                myChart.data.labels = data.xData;
                myChart.data.datasets[0].data = data.yData;
                myChart.update();
            })
            .catch(error => console.error('Error fetching data:', error));
        }

        // Actualizar la gr√°fica cada 5 segundos
        setInterval(updateChart, 5000); // Intervalo de 5 segundos
</script>

</body>
</html>
